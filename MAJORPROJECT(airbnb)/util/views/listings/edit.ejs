<%layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
    <div class="col-7 offset-2">
    <h3>edit your listing</h3>
    <form method="POST" action="/listings/<%= Listing._id%>?_method=PUT">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
             <input name="listing[title]" value="<%= Listing.title %>" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea 
            name="listing[description]"
            class="form-control">
            <%= Listing.description %>
            
        </textarea>
        </div>


        <div class="mb-3">
            <lable for="image" class="form-label">Image link</lable>
            <input
         name="listing[image][url]" 
         value="<%= Listing.image.url %>" 
         type="text"
         class="form-control"
         ></input>
        </div>
        

        <div class="mb-3">
            <lable for="price" class="form-label">Price</lable>
             <input name="listing[price]"
         value="<%= Listing.price%>" 
          type="Number"
          class="form-control">
        </div>
        <div class="row">
       <div class="mb-3 col-md-4">
        <lable for="location" class="form-label">location</lable>
        <input name="listing[location]"
         value="<%= Listing.location%>"
          type="text" class="form-control">
       </div>
        
        <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">country</lable>
            <input name="listing[country]" 
        value="<%= Listing.country%>" 
        type="text" class="form-control">
        </div>
        </div>

        
        <button class="btn btn-dark mt-4 mb-3 add-btn"  >edit</button>
    </form>
    </div>
    </div>
</body>